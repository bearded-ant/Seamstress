<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/client_list_navigation"
    app:startDestination="@id/clientListFragment">

    <fragment
        android:id="@+id/clientListFragment"
        android:name="com.example.seamstress.ui.fragments.clients.listFragment.ClientListFragment"
        android:label="Список клиентов">
        <action
            android:id="@+id/action_clientListFragment_to_clientFragment"
            app:destination="@id/clientFragment" />
        <action
            android:id="@+id/action_clientListFragment_to_newClientFragment"
            app:destination="@id/newClientFragment" />
    </fragment>
    <fragment
        android:id="@+id/clientFragment"
        android:name="com.example.seamstress.ui.fragments.clients.mainFragment.ClientFragment"
        android:label="Клиент">
        <action
            android:id="@+id/action_clientFragment_to_clientListFragment"
            app:destination="@id/clientListFragment" />
        <argument
            android:name="clientEntityId"
            app:argType="long" />
        <action
            android:id="@+id/action_clientFragment_to_updateClientFragment"
            app:destination="@id/updateClientFragment" />
    </fragment>
    <fragment
        android:id="@+id/newClientFragment"
        android:name="com.example.seamstress.ui.fragments.clients.add.NewClientFragment"
        android:label="Новый клиент">
        <action
            android:id="@+id/action_newClientFragment_to_clientListFragment"
            app:destination="@id/clientListFragment" />
        <action
            android:id="@+id/action_newClientFragment_to_clientFragment"
            app:destination="@id/clientFragment"
            app:popUpTo="@id/clientListFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateClientFragment"
        android:name="com.example.seamstress.ui.fragments.clients.update.UpdateClientFragment"
        android:label="Редактирование">
        <argument
            android:name="clientEntityId"
            app:argType="long" />
        <action
            android:id="@+id/action_updateClientFragment_to_clientFragment"
            app:destination="@id/clientFragment"
            app:popUpTo="@id/clientListFragment" />
        <action
            android:id="@+id/action_updateClientFragment_to_clientListFragment"
            app:destination="@id/clientListFragment" />
    </fragment>
</navigation>